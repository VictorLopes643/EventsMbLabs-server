// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Clients {
  id                  String                @id @default(uuid())
  username            String                @unique
  password            String
  Events_Participants Events_Participants[]

  @@map("client")
}

model Companies {
  id             String   @id @default(uuid())
  username       String   @unique
  name_companies String   @unique
  password       String
  Events         Events[]

  @@map("companies")
}

model Events {
  id                  String                @id @default(uuid())
  name                String
  type                String
  data                DateTime
  amount              String
  description         String
  place               String
  id_companies        String
  companies           Companies?            @relation(fields: [id_companies], references: [id])
  events_participants Events_Participants[]

  @@map("events")
}

model Events_Participants {
  id         String   @id @default(uuid())
  id_clients String
  clients    Clients? @relation(fields: [id_clients], references: [id])
  id_events  String?
  Events     Events?  @relation(fields: [id_events], references: [id])

  @@map("events_participants")
}
